{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "program": "${workspaceRoot}/node_modules/jasmine/bin/jasmine",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "smartStep": true,
            "preLaunchTask": "build",
            "args": [
                "--config=jasmine.json"
            ],
            "outFiles": [
                "${workspaceRoot}/dist/*.js",
                "${workspaceRoot}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug server",
            "program": "${workspaceRoot}/dist/server/server.js",
            "cwd": "${workspaceRoot}",
            "smartStep": true,
            "stopOnEntry": true,
            "sourceMaps": true,
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceRoot}/dist/server/*.js",
                "${workspaceRoot}/dist/server/**/*.js"
            ]
        }
    ]
}